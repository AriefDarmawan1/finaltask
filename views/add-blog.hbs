<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link rel="stylesheet" href="../assets/css/index.css" />
    <link rel="stylesheet" href="../assets/css/nav.css" />
    <link rel="stylesheet" href="../assets/css/blog.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <style>
      .active { color: orangered !important; font-weight: bold; } .btn-warning { background-color: #00d8ff; color: white; font-weight: bold; } .btn-secondary { background-color: #dbdbdb; color: black; font-weight: bold; }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        {{! <img src="../assets/img/dumbways.png" class="navbar-logo" style="margin-right: 10px" /> }}
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/blog">Provinsi Dan Kabupaten</a>
            </li>
            {{! <li class="nav-item">
              <a class="nav-link active" href="/kabupaten">Kabupaten</a>
            </li> }}
          </ul>
          {{! <a class="btn btn-warning" href="/contact" style="padding: 10px">
            Contact
          </a> }}
        </div>
      </div>
    </nav>

    <div class="container text-center my-5">
      <h1>Add Provinsi</h1>
      <form method="post" action="/blog" enctype="multipart/form-data">
        <div class="input-group mb-3 d-flex flex-column align-items-start">
          <label style="font-weight: bold">Nama</label>
          <input type="text" class="form-control w-100" id="input-blog-title" name="title" />
        </div>

        <div class="input-group mb-3 d-flex flex-column align-items-start">
          <label style="font-weight: bold">pulau</label>
          <textarea class="form-control w-100" aria-label="With textarea" id="input-blog-content" name="content"></textarea>
        </div>

        <div class="input-group mb-3 d-flex flex-column align-items-start">
          <label style="font-weight: bold">Foto</label>
          <input type="file" class="form-control w-100" id="input-blog-image" name="image" />
        </div>

        <div class="input-group mb-3 d-flex flex-column align-items-start">
          <label style="font-weight: bold">Diresmikan</label>
          <input type="date" class="form-control w-100" id="input-blog-date" name="date" />
        </div>

        {{! <div class="input-group mb-3 d-flex flex-column align-items-start">
          <label style="font-weight: bold">Skills</label>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="skill-js" name="skills" value="JavaScript" />
            <label class="form-check-label" for="skill-js">
              JavaScript
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="skill-postgre" name="skills" value="PostgreSQL" />
            <label class="form-check-label" for="skill-postgre">
              PostgreSQL
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="skill-react" name="skills" value="React.js" />
            <label class="form-check-label" for="skill-react">
              React.js
            </label>
          </div>
        </div> }}

        <div class="w-100 d-flex justify-content-end">
          <button class="btn btn-warning p-3" type="submit">Post Blog</button>
        </div>
      </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>