<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Provinsi & Kabupaten</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../assets/css/index.css" />
    <link rel="stylesheet" href="../assets/css/nav.css" />
    <link rel="stylesheet" href="../assets/css/blog.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <style>
      body {
        background-color: #111;
        color: #00d8ff;
      }

      .card {
        background-color: #222;
        border: 1px solid #444;
        color: #fff;
      }

      .btn-primary {
        background-color: #00d8ff;
        border: none;
      }

      .btn-warning {
        background-color: #00d8ff;
        border: none;
        color: #000;
      }

      .navbar {
        background-color: #111;
        border-bottom: 1px solid #444;
      }

      .navbar-logo {
        max-height: 40px;
      }

      .container .btn {
        margin: 5px;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        {{!-- <img
          src="../assets/img/dumbways.png"
          class="navbar-logo"
          style="margin-right: 10px"
        /> --}}
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/blog">Provinsi Dan Kabpuaten</a>
            </li>
            <a href="/testimonial" class="navbar-link" style="padding: 10px">
              Testimonial
            </a>
            </li>
          </ul>
          {{#if user}}
          <div style="font-size: large">
            <h1>Selamat Datang, {{user.name}}!</h1>
          </div>
          <a href="/logout" class="btn btn-warning" style="padding: 10px">Logout</a>
          {{else}}
          <a href="/register" style="padding: 10px" class="btn btn-warning">Register</a>
          <a href="/login" style="padding: 10px" class="btn btn-warning">Login</a>
          {{/if}}
          {{!-- <a class="btn btn-warning" href="/contact" style="padding: 10px">
            Contact --}}
          </a>
        </div>
      </div>
    </nav>

    <div class="container text-center my-5">
      <div class="d-flex justify-content-between mb-3">
        <select class="form-select w-25">
          <option selected>Provinsi</option>
          <option value="1">Jawa Barat</option>
          <option value="2">Jawa Tengah</option>
          <option value="3">Bali</option>
          <option value="4">Aceh</option>
        </select>
        <div>
          {{!-- <button class="btn btn-primary" onclick="addProvinsi()">Add Provinsi</button>
          <button class="btn btn-primary" onclick="addKabupaten()">Add Kabupaten</button> --}}
        </div>
      </div>

      {{#if user}}
      <div class="d-flex justify-content-end mb-3">
        <a href="add-blog" class="btn btn-warning">Add Provinsi</a>
        <a href="add-blog" class="btn btn-warning">Add Kabupaten</a>
      </div>
      {{/if}}

      <div id="contents" class="blog-list">
        {{#each data}}
        <div
          class="card text-center"
          style="width: 18rem; display: inline-block; margin: 10px"
        >
          <img
            src="/uploads/{{image}}"
            class="card-img-top mx-auto"
            style="width: 50%; margin-top: 10px"
            alt="..."
          />
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{createdAt}}</p>
            <a href="/blog-detail/{{id}}" class="btn btn-primary">Detail</a>
            <a href="/edit-blog/{{id}}" class="btn btn-secondary">Edit</a>
            <a href="/delete-blog/{{id}}" class="btn btn-danger">Delete</a>
          </div>
        </div>
        {{/each}}
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="../assets/js/blog.js"></script>
    <script>
      function addProvinsi() {
        // Logic to add Provinsi
        alert("Add Provinsi clicked");
      }

      function addKabupaten() {
        // Logic to add Kabupaten
        alert("Add Kabupaten clicked");
      }
    </script>
  </body>
</html>
